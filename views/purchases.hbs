<!-- Purchases.hbs -->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<!-- Page Title -->
<div>
        <h2>Purchases in Database</h2>

{{!-- Create a table --}}
<table id="purchases-table" border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>Wholesaler</th>
            <th>Employee</th>
            <th>Was it paid? (1 = YES)</th>
            <th>Delivery Date</th>
            <th>Was it delivered? (1 = YES)</th>
            <th>Total Cost</th>
            <th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, alcohol name, type, percentage, wholesale price, volume, and inventory count in order --}}
        {{#each data}}
        <tr data-value="{{this.purchaseID}}">
            <td>{{this.purchaseID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.lastName}}, {{this.firstName}}</td> {{!-- Employee's last and first name from the big join --}}
            <td>{{this.paid}}</td>
            <td>{{this.deliveryDate}}</td>
            <td>{{this.delivered}}</td>
            <td>{{this.totalCost}}</td>
            <td><button onclick="deletePurchase({{this.purchaseID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/delete_purchase.js"></script>
</div>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}

{{!--  When using express.static('public'), you should reference static files in the HTML as if the public folder is the root --}}
