<!-- wholesalers.hbs -->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<div>
<!-- Page Title -->
    <h2>Wholesalers in Database</h2>

{{!-- Create a table --}}
<table id="wholesaler-table" border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Contact</th>
            <th></th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, alcohol name, type, percentage, wholesale price, volume, and inventory count in order --}}
        {{#each data}}
        <tr data-value={{this.wholesalerID}}>
            <td>{{this.wholesalerID}}</td>
            <td>{{this.name}}</td>
            <td>{{this.address}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.contactName}}</td>
            <td><button onclick="deleteWholesaler({{this.wholesalerID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="/js/delete_wholesaler.js"></script>
{{!-- Page Navigation  --}}
<p></p>
<button type="reset" onclick="location.href='#add-wholesaler'">Add</button>
<button type="reset" onclick="location.href='#update-wholesaler'">Update</button>
</div>


{{!-- Form to add a wholesaler to the above table  --}}
<div id="add-wholesaler">
<h2>Add a Wholesaler</h2>
<p>Input data for new wholesaler here.</p>
<form id="add-wholesaler-form" method="POST" action="/add-wholesaler-form">
    <p>
        <label for="name">Wholesaler Name: </label>
        <input type="text" name="name" id="name">
   
        <label for="address">Address: </label>
        <input type="text" name="address" id="address">
    </p>
    <p>
        <label for="email">Email: </label>
        <input type="text" name="email" id="email">
    
        <label for="phone">Phone Number: </label>
        <input type="text" name="phone" id="phone">
   
        <label for="contactName">Contact Name: </label>
        <input type="text" name="contactName" id="contactName">
    </p>
    <input type="submit">
</form>
</div>

{{!-- Form to update a wholesaler that is currently in the table --}}
<div id="update-wholesaler">
<h2>Update Wholesaler</h2>
<p>To update a specific Wholesaler's information, select their name from the dropdown below.</p>
<form id="update-wholesaler-form">
    <p>
        <label for="input-wholesalerID">Updating wholesaler: </label>
        <select name="input-wholesalerID" id="wholesalerSelect">
            <option value="test">Select</option>
            {{#each data}}
            <option value="{{this.wholesalerID}}">{{this.name}}</option>
            {{/each}}
        </select>
    </p>
    <p>
        <label for="input-address">New Address: </label>
        <input type="text" name="input-address" id="input-address">
    
        <label for="input-email">New Email: </label>
        <input type="text" name="input-email" id="input-email">
    </p>
    <p>
        <label for="input-phone">New Phone Number: </label>
        <input type="text" name="input-phone" id="input-phone">
    
        <label for="input-contactName">New Contact Name: </label>
        <input type="text" name="input-contactName" id="input-contactName">
    </p>
    <input type="submit">
</form>
</div>
<script src="/js/update_wholesaler.js"></script>
